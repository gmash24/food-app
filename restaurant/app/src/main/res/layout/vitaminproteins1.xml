<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD5D5"
    tools:context=".proteinvita">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECD5D5"
        tools:context=".vitaminprotein1">



        <TableRow>

            <TextView
                android:layout_marginStart="150dp"
                android:fontFamily="cursive"
                android:padding="8dp"
                android:text="Proteins"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />


        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/mutton"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/btn_rounded1"
                android:padding="@dimen/fab_margin"
                android:text="mutton"
                android:textColor="#000" />
            <TextView
                android:text="ksh 10"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/fish"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dip"
                android:text="fish"
                android:textColor="#000" />
            <TextView
                android:text="ksh 20"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/beef"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dip"
                android:text="beef"
                android:textColor="#000" />
            <TextView
                android:text="ksh 30"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/pork"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dp"
                android:text="pork"
                android:textColor="#000" />
            <TextView
                android:text="ksh 70"
                android:textColor="#000"
                android:padding="10dip"/>


        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/cereal"
                android:layout_marginStart="150dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="cursive"
                android:padding="8dp"
                android:text="cereals"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/beans"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dp"
                android:text="beans"
                android:textColor="#000" />
            <TextView
                android:text="ksh 20"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/green_grams"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dip"
                android:text="green grams"
                android:textColor="#000" />
            <TextView
                android:text="ksh 10"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/cowpeas"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dp"
                android:text="cow peas"
                android:textColor="#000" />
            <TextView
                android:text="ksh 15"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/liquids"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="cursive"
                android:padding="8dip"
                android:text="liquids"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold|italic" />


        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/eggs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dip"
                android:text="eggs"
                android:textColor="#000" />
            <TextView
                android:text="ksh 10"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/yoghurt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dip"
                android:text="yoghurt"
                android:textColor="#000" />
            <TextView
                android:text="ksh 5"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/milk"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded1"
                android:padding="10dip"
                android:text="milk"
                android:textColor="#000" />
            <TextView
                android:text="ksh 20"
                android:textColor="#000"
                android:padding="10dip"/>

        </TableRow>
        <EditText
            android:id="@+id/food"
            android:layout_width="267dp"
            android:layout_height="54dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="#F7F4F4"
            android:ems="10"
            android:hint="Enter your selected food"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"></EditText>

        <EditText
            android:id="@+id/quantity"
            android:layout_width="267dp"
            android:layout_height="54dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="#F7F4F4"
            android:ems="10"
            android:hint="insert your quantity"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark">

        </EditText>
        <EditText
            android:id="@+id/price"
            android:layout_width="267dp"
            android:layout_height="54dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="#F7F4F4"
            android:ems="10"
            android:hint="enter food price"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark">

        </EditText>
        <Button
            android:id="@+id/addfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_rounded1"
            android:text="add food">

        </Button>

        <Button
            android:id="@+id/vitaminproteinresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_rounded1"
            android:text="see your diet">

        </Button>

    </TableLayout>
</ScrollView>








